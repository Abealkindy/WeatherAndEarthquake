<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abraham24.weatherandearthquake.DetailActivity"
    tools:showIn="@layout/activity_detail">
    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="605dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_marginTop="20dp"

        android:id="@+id/imageView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="70dp"

        android:id="@+id/textWaktu"
        android:layout_below="@id/imageView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/textWaktu"

        android:textSize="15sp"

        android:layout_marginLeft="20dp"

android:layout_marginTop="30dp"
        android:id="@+id/textLintang"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
      android:layout_marginTop="30dp"
        android:textSize="15sp"
      android:layout_below="@id/textLintang"
        android:id="@+id/textMagnitudo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="15sp"
       android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/textMagnitudo"
        android:id="@+id/textKedalaman" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textSize="15sp"
     android:layout_marginTop="30dp"
        android:id="@+id/textWilayah"
        android:layout_marginLeft="20dp"
     android:layout_below="@id/textKedalaman"/>
    </RelativeLayout>

</ScrollView>
